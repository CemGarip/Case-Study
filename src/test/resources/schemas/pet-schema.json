{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Pet",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "format": "int64"
    },
    "name": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "available",
        "pending",
        "sold"
      ]
    }
  },
  "required": [
    "id",
    "name",
    "status"
  ]
}